<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/characterRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/characterView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardBackgroundColor="@color/cardBackground"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/characterContainerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/characterArt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/marvel_placeholder"
                android:layout_marginEnd="10dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/characterName"
                android:layout_toEndOf="@+id/characterArt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorPrimary"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/characterAppearsInLabel"
                android:layout_below="@+id/characterName"
                android:layout_toEndOf="@+id/characterArt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textColorPrimaryInverse"
                android:text="@string/appears" />

            <TextView
                android:id="@+id/characterAppearsIn"
                android:layout_below="@+id/characterAppearsInLabel"
                android:layout_toEndOf="@+id/characterArt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/textColorPrimaryInverse"
                android:text="@string/app_name" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>